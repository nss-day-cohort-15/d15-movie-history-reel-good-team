
<div class="row filters">
  <h3> <span class="breadCrumb"></span></h3>
  <button class="filter waves-effect btn-flat showUntracked" type="button">Show Untracked</button>
  <button class="filter btn-flat showUnwatched disabled" type="button" disabled>Show Unwatched</button>
  <button class="filter btn-flat showWatched disabled" type="button" disabled>Show Watched</button>
</div>

<div id="rangeDiv" class="row hidden">
  <form action="#">
      <label class="z-depth-1 cyan lighten-4">Filter by Rating</label>
      <p class="range-field">
      <input type="range" id="ratingRange" min="0" max="10" />
      </p>
  </form>
</div>

<div class="row">

{{#unless this}}
  <div class="col offset-m1 m8 newUser">
    <h4>You need to search and add movies to your account.</h4>
      <ol>
        <li>
          First you need to search for an item using the above search bar!
        </li>
        <li>
          Then you can click <button class="waves-effect waves-light btn">Add to Watchlist</button>
        </li>
        <li>
          After you follow these steps go ahead and rate your movie using our <i class="material-icons">star</i> feature!
        </li>
        <li>
          Remember that 10 stars makes your movie a favorite!
        </li>
      </ol>
  </div>
{{/unless}}
{{#each this}}
<div class="movieDiv col m4 col s6">
  {{#if saved}}
  <div class="z-depth-1 movieCard center-align" rating="{{rating}}" saved="{{saved}}">
  <div class="chip right-align delete-btn" key="{{@key}}">
    Delete <i class="close material-icons">close</i>
  </div>
  {{else}}
  <div class="z-depth-1 movieCard center-align">
  {{/if}}
  <h5 class="title"> {{Title}} </h5>
  <img src="{{Poster}}" alt="{{Title}} Image" class="movieImg">
  <p> Released in {{Year}} </p>
  <p> Staring: {{Actors}} </p>
  {{#if saved}}
  <span class="rating">
    <i key="{{@key}}" class="1 material-icons userRating {{activateStars rating 1}}">star</i>
    <i key="{{@key}}" class="2 material-icons userRating {{activateStars rating 2}}">star</i>
    <i key="{{@key}}" class="3 material-icons userRating {{activateStars rating 3}}">star</i>
    <i key="{{@key}}" class="4 material-icons userRating {{activateStars rating 4}}">star</i>
    <i key="{{@key}}" class="5 material-icons userRating {{activateStars rating 5}}">star</i>
    <i key="{{@key}}" class="6 material-icons userRating {{activateStars rating 6}}">star</i>
    <i key="{{@key}}" class="7 material-icons userRating {{activateStars rating 7}}">star</i>
    <i key="{{@key}}" class="8 material-icons userRating {{activateStars rating 8}}">star</i>
    <i key="{{@key}}" class="9 material-icons userRating {{activateStars rating 9}}">star</i>
    <i key="{{@key}}" class="10 material-icons userRating {{activateStars rating 10}}">star</i>
  </span>
  {{else}}
    <button type="button" class="addMovie" key="{{@key}}" style="{{checkAuth}}"> Add to Watchlist </button>
  {{/if}}
</div>
</div>
{{/each}}
</div>
